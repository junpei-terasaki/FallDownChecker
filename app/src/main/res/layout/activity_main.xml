<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stl.falldownchecker.MainActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:text="※はじめての方は最初に診断テストを受けてください"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="転倒危険度チェック"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_training"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:onClick="training"
            android:text="トレーニング"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn_check"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:onClick="check"
            android:text="診断テスト"
            android:textSize="60sp" />

        <Button
            android:id="@+id/btn_entry"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/btn_check"
            android:layout_alignStart="@+id/btn_check"
            android:layout_below="@+id/btn_check"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:onClick="entry"
            android:text="@string/btn_entry"
            android:textSize="60sp" />

    </LinearLayout>

</RelativeLayout>
