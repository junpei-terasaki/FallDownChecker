<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/exercise_list_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="トレーニング内容"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/checker_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="診断結果"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:onClick="sendMail"
        android:text="@string/btn_close"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checker_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="TextView"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/training2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/training1"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/training4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/training3"
        android:text="TextView"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/training1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/exercise_list_txt"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/training5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/training4"
        android:text="TextView"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/training3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/training2"
        android:text="TextView"
        android:textSize="26sp" />

</RelativeLayout>